{
	"name": "TypeScript React",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/typescript-react",
	"features": {
		"ghcr.io/devcontainers/features/sshd:1": {
			"version": "latest"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"git.openRepositoryInParentFolders": "always"
			}
		}
	},
	"remoteEnv": {
		"BACKEND_API_HOST": "${localEnv:CODESPACE_NAME}-8080.${localEnv:GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}"
	},
	"forwardPorts": [5173, 8080, 5432],
	"postCreateCommand": "npm ci",
	"postStartCommand": "gh codespace ports visibility 8080:public -c $CODESPACE_NAME",
	"portsAttributes": {
		"5173": {
			"label": "React application",
			"onAutoForward": "openPreview"
		},
		"5432": {
			"label": "Postgres database"
		},
		"8080": {
			"label": "Backend API"
		}
	}
}
